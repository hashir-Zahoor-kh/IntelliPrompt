root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{json,json5}]
indent_size = 2

[*.{gradle,kts}]
indent_size = 4

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
